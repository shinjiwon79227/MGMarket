<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/product_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="12dp"
        android:background="@drawable/list_img_background"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/product_info_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/product_img"
        app:layout_constraintStart_toEndOf="@id/product_img"
        app:constraint_referenced_ids="product_name,product_location,product_price"
        android:orientation="vertical"
        app:flow_horizontalAlign="start"
        android:layout_marginStart="16dp"
        app:flow_verticalGap="3dp"/>


    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="프라다 복조리백"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:maxWidth="230dp"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/product_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="수원시 영통구 원천동"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="50,000원"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/product_btn_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/product_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:constraint_referenced_ids=
            "product_chat_btn,product_chat_count,product_favorite_btn,product_favorite_count"
        app:flow_horizontalGap="4dp"
        android:layout_marginEnd="14dp"/>

    <ImageButton
        android:id="@+id/product_chat_btn"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_chat"
        android:background="@android:color/transparent"
        app:tint="@color/black"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/product_chat_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="16"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/product_favorite_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_favorite"
        android:background="@android:color/transparent"
        app:tint="@color/black"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/product_favorite_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="25"
        android:textSize="20sp" />

    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="400dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>